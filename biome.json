{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["src/routeTree.gen.ts", ".vscode/*"],
    "include": ["api/**/*", "src/**/*", "index.html", "vite.config.js"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2  
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
"overrides": [
    {
      "include": ["**/*.ts"],
      "formatter": {
        "indentWidth": 4
      }
    },
    {
      "include": ["**/*.tsx"],
      "formatter": {
        "indentWidth": 2
      }
    }
  ]
}
